<!DOCTYPE html>
<html>
  <head>
    <%- include('partials/head'); %>
    <title><%= title %></title>
  </head>
  <body>
    <!-- Navbar -->
    <%- include('partials/header'); %>

    <!-- Contents -->
    <div class="uk-section uk-section-default">
      <div class="uk-container">
        <div class="uk-margin-large">
          <h2 class="uk-width-medium uk-h2">Products</h2>
          <div class="uk-divider-small"></div>
          <div class="uk-grid uk-grid-small uk-child-width-1-2 uk-child-width-1-3@m uk-child-width-1-4@l uk-grid-match" data-uk-grid>

            <!-- Items -->
            <% for (let i = 0; i < 10; i++) { %>
              <div>
                <div class="uk-card uk-card-default uk-card-small">
                  <div class="uk-card-media-top">
                    <div class="uk-inline-clip uk-light">
                      <img src="https://unsplash.it/400/320/?random" alt="test picture">
                    </div>
                  </div>
                  <div class="uk-card-header">
                    <div class="uk-gird-small uk-flex uk-flex-middle" data-uk-grid>
                      <div class="uk-width-expand">
                        <h5 class="uk-margin-remove-bottom">Product <%= i+1 %></h5>
                        <p class="uk-text-meta uk-margin-remove">Additional info</p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>